@{
    ViewBag.Title = "Import Vehicles";
}

<h2>Import Vehicles from CSV</h2>

@using (Html.BeginForm("PreviewImport", "Vehicles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="csvFile">CSV File:</label>
        <input type="file" name="csvFile" id="csvFile" accept=".csv" class="form-control" required />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-info">Preview CSV</button>
        @Html.ActionLink("Skip to Import", "Import", "Vehicles", null, new { @class = "btn btn-secondary ml-2" })
    </div>
}
