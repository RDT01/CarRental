@model IEnumerable<Project1.Models.Ratings>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>

<!-- Ratings Table -->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cleanliness)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Maintenance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Communication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accuracy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Feedback)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Cleanliness)</td>
            <td>@Html.DisplayFor(modelItem => item.Maintenance)</td>
            <td>@Html.DisplayFor(modelItem => item.Communication)</td>
            <td>@Html.DisplayFor(modelItem => item.Accuracy)</td>
            <td>@Html.DisplayFor(modelItem => item.Feedback)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })

                @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
                {
                    @: &nbsp;
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @: &nbsp;
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }
</table>
