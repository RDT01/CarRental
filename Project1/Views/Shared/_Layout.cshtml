<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Car Rental Service</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: #2c3e50;
            font-family: Arial, sans-serif;
            color: #fff;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100%;
        }

        .container.body-content {
            background-color: #ffffff;
            color: #000;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
            flex: 1;
            box-sizing: border-box;
        }

        .navbar {
            background-color: #2c3e50;
        }

        .navbar-nav .nav-link {
            color: white !important;
        }

            .navbar-nav .nav-link:hover {
                color: #f1c40f !important;
            }

        footer {
            background-color: #222;
            color: white;
            text-align: center;
            padding: 15px;
            width: 100%;
        }

        .login-register-form {
            max-width: 400px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f7f7f7;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

            .login-register-form input,
            .login-register-form select,
            .login-register-form button {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                font-size: 16px;
                box-sizing: border-box;
            }

            .login-register-form label {
                font-weight: bold;
                margin-bottom: 5px;
                display: block;
            }

            .login-register-form .form-control {
                border-radius: 5px;
                border: 1px solid #ccc;
            }

            .login-register-form button {
                background-color: #2c3e50;
                color: white;
                border: none;
                cursor: pointer;
                border-radius: 5px;
            }

                .login-register-form button:hover {
                    background-color: #1a252f;
                }

            .login-register-form .alt-link {
                text-align: center;
                margin-top: 10px;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container">
                @Html.ActionLink("Car Rental Service", "Index", "Home", null, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Vehicles", "Index", "Vehicles", null, new { @class = "nav-link" })</li>

                        @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
                        {
                            <li>@Html.ActionLink("Users", "Index", "Users", null, new { @class = "nav-link" })</li>
                            //<li>@Html.ActionLink("Ratings", "Index", "Ratings", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "nav-link" })</li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (Session["Role"] == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Users")">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Users")">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form method="post" action="@Url.Action("Logout", "Users")" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>

        <!-- Footer -->
        <footer>
            <p>&copy; @DateTime.Now.Year - Car Rental Service — All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


